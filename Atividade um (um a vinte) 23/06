programa
{
	
	funcao inicio()
	{
		inteiro nmr
		inteiro aux = 0
		escreva("me informe um n√∫mero: ")
		leia(nmr)

		limpa()

		enquanto(aux<=nmr ){
			escreva(aux , "\n" )
			aux++
		}

		escreva("\n*****************************************\n")
		 
		aux = 0
		
 		enquanto(nmr>=aux){
			escreva(nmr, "\n")
			nmr--
 		}
	}
}
